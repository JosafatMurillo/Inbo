<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane"
            prefHeight="400.0"
            prefWidth="600.0"
            styleClass="mainFxmlClass"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.inbo.gui.controllers.CStartQuiz">
    <stylesheets>
        <URL value="@styles/sgeneral.css" />
        <URL value="@styles/sstartquiz.css"/>
    </stylesheets>
    
    <top>
        <StackPane prefHeight="55"
                   style="-fx-background-color:#00819f;">
            <JFXButton fx:id="backButton"
                       text="î€Ž"
                       textFill="#FFFFFF"
                       onAction="#stepBack"
                       StackPane.alignment="CENTER_LEFT">
                <font>
                    <Font name="Segoe MDL2 Assets" size="32"/>
                </font>
            </JFXButton>
            <JFXButton fx:id="buttonNext"
                       text="%key.nextButton"
                       onAction="#nextPage"
                       style="-fx-background-color: #000000;"
                       textFill="#FFFFFF"
                       StackPane.alignment="CENTER_RIGHT">
                <font>
                    <Font name="Segoe UI" size="20"/>
                </font>
                <StackPane.margin>
                    <Insets right="10"/>
                </StackPane.margin>
            </JFXButton>
        </StackPane>
    </top>
    <left>
        <StackPane fx:id="leftPane"
                   prefWidth="600"
                   maxWidth="600"
                   prefHeight="700"
                   maxHeight="1000">
            <VBox  maxHeight="280.0"
                   maxWidth="450.0"
                   prefHeight="100.0"
                   prefWidth="200.0"
                   style="-fx-background-color: #00819f;">
                <Label text="%key.inviteTitle"
                       textFill="#FFFFFF">
                    <font>
                        <Font name="Segoe UI"
                              size="46.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="35" top="15"/>
                    </VBox.margin>
                </Label>
                <Label text="%key.inviteDescription"
                       wrapText="true"
                       prefWidth="350"
                       textFill="#FFFFFF">
                    <font>
                        <Font name="Segoe UI" size="15"/>
                    </font>
                    <VBox.margin>
                        <Insets top="15" left="45"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="emailField"
                           prefWidth="350"
                           promptText="Email"
                           maxWidth="350"
                           prefHeight="30">
                    <VBox.margin>
                        <Insets top="30" left="45"/>
                    </VBox.margin>
                </TextField>
                <JFXButton fx:id="enterButton"
                           onAction="#addFriend"
                           text="%key.enterButton">
                    <VBox.margin>
                        <Insets top="20" left="195"/>
                    </VBox.margin>
                </JFXButton>
            </VBox>
        </StackPane>
    </left>
    <right>
        <StackPane fx:id="rightPane"
                   prefWidth="600"
                   maxWidth="800"
                   prefHeight="700"
                   maxHeight="1000"
                   style="-fx-background-color: white;">
            <VBox prefWidth="480"
                  maxWidth="480"
                  maxHeight="800">
                <Label text="%key.invitedFriends">
                    <font>
                        <Font name="Segoe UI"
                              size="46.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="35" top="15"/>
                    </VBox.margin>
                </Label>
                <ListView fx:id="friendsList"
                          prefWidth="600"
                          maxWidth="600"
                          prefHeight="700">
                    
                </ListView>
            </VBox>
        </StackPane>
    </right>
    
</BorderPane>
