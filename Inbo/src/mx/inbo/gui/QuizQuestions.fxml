<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane"
            prefHeight="400.0"
            prefWidth="600.0"
            styleClass="mainFxmlClass"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.inbo.gui.controllers.CQuizQuestions">
    
    <stylesheets>
        <URL value="@/mx/inbo/gui/styles/squizquestions.css"/>
        <URL value="@styles/sgeneral.css" />
    </stylesheets>
    
    <top>
        <StackPane prefHeight="55"
                   style="-fx-background-color:#00819f;">
            <JFXButton fx:id="backButton"
                       text="î€Ž"
                       textFill="#FFFFFF"
                       onAction="#stepBack"
                       StackPane.alignment="CENTER_LEFT">
                <font>
                    <Font name="Segoe MDL2 Assets" size="32"/>
                </font>
            </JFXButton>
            <JFXButton fx:id="nextButton"
                       text="%key.nextButton"
                       style="-fx-background-color: #000000;"
                       textFill="#FFFFFF"
                       StackPane.alignment="CENTER_RIGHT">
                <font>
                    <Font name="Segoe UI" size="20"/>
                </font>
                <StackPane.margin>
                    <Insets right="10"/>
                </StackPane.margin>
            </JFXButton>
        </StackPane>
    </top>
    
    <center>
        <StackPane>
            <StackPane fx:id="titlePane"
                       prefWidth="1000"
                       maxWidth="1000"
                       maxHeight="80"
                       StackPane.alignment="TOP_CENTER">
                <Label text="%key.quizQuestionsTitle"
                       StackPane.alignment="TOP_LEFT">
                    <font>
                        <Font name="Segoe UI Semilight"
                              size="42"/>
                    </font>
                </Label>
                <JFXButton fx:id="addButton"
                           text="%key.addQuestion"
                           onAction="#loadQuestionMaker"
                           StackPane.alignment="TOP_RIGHT">
                    <font>
                        <Font name="Segoe UI"
                              size="16"/>
                    </font>
                    <StackPane.margin>
                        <Insets top="20"/>
                    </StackPane.margin>
                </JFXButton>    
                <StackPane.margin>
                    <Insets top="20"/>
                </StackPane.margin>
            </StackPane>
        </StackPane>
    </center>
    
</BorderPane>
