<BorderPane fx:id="mainPane"
            prefHeight="400.0"
            prefWidth="600.0"
            styleClass="mainFxmlClass"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.inbo.gui.controllers.CQuizCode">
    <stylesheets>
        <URL value="@/mx/inbo/gui/styles/squizcode.css"/>
        <URL value="@styles/sgeneral.css" />
    </stylesheets>
    
    <top>
        <StackPane prefHeight="60.0"
                   prefWidth="200.0"
                   style="-fx-background-color: #00819f;"
                   BorderPane.alignment="CENTER">
            <JFXButton fx:id="backButton"
                       text="î€Ž"
                       textFill="#FFFFFF"
                       onAction="#stepBack"
                       StackPane.alignment="CENTER_LEFT">
                <font>
                    <Font name="Segoe MDL2 Assets" size="32"/>
                </font>
            </JFXButton>
        </StackPane>
    </top>
    <center>
        <StackPane>
            <children>
                <ImageView fx:id="background">
                    <image>
                        <Image url="/mx/inbo/images/door.jpg" />
                    </image>
                    <effect>
                        <Lighting bumpInput="$null">
                            <light>
                                <Light.Distant />
                            </light>
                        </Lighting>
                    </effect>
                </ImageView>
                <Circle fx:id="userImage"
                        radius="71.0">
                    <fill>
                        <ImagePattern>
                            <image>
                                <Image url="/mx/inbo/images/dog.jpg" />
                            </image>
                        </ImagePattern>
                    </fill>
                </Circle>
            </children>
        </StackPane>
    </center>
    
</BorderPane>
